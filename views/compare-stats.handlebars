<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-5 col-xl-4 p-0">
            <div class="card shadow-lg p-0 d-flex flex-column compare-user-card m-2"
                friend-id="{{_locals.friendData.id}}">
                <div class="d-flex flex-row">
                    <button class="btn transparent-red-glow-btn position-absolute bottom-0 end-0 m-3"
                        data-friend-id="{{_locals.friendData.id}}" type="button" id="see-stats-button">
                        See stats
                    </button>
                    <img src="{{_locals.friendData.steam_avatar_full}}" class="img-fluid steam-user-image rounded"
                        alt="...">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <p class="card-text red-glow-title">{{_locals.friendData.steam_username}}</p>
                            <a href="{{_locals.friendData.profile_url}}" target="_blank" class="neon-red-link">Steam
                                Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row d-flex flex-row justify-content-between">
                    <div class="col-12 p-0">
                        <div class="card shadow-lg mt-0 m-2 mt-2 friend-owned-games-card">
                            <div class="card-header">
                                <h4 class="dash-title m-0 mt-2">Shared Games:</h4>
                                {{!-- <h5 class="dash-title m-0 mt-3">
                                    <sm><i>(click to compare)</i></sm>
                                </h5> --}}
                            </div>
                            <div class="card-body">
                                {{#each _locals.sharedGames}}
                                <button sharedGameAppId="{{app_id}}"
                                    class="sharedGameBtn btn violet-glow-btn btn-game d-flex flex-row justify-content-between align-items-center w-100 mb-1 p-0">
                                    <div class="d-flex align-items-center">
                                        <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{app_id}}/{{img_icon_url}}.jpg"
                                            class="img-fluid steam-game-thumbnail rounded p-0 me-3" alt="...">
                                        <p class="card-text">{{name}}</p>
                                    </div>
                                    <p class="card-text mx-2 text-end text-nowrap">{{to_hours playtime_forever}} h
                                    </p>
                                </button>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-7 col-xl-8 p-0">
            <div class="card shadow-lg m-2 p-3">
                {{#if private}}
                <div class="card-header d-flex justify-content-center align-items-center">
                    <h4 class="card-title dash-title m-0 my-2 lh-base mb-0">
                        {{{_locals.friendData.steam_username}}}'s steam game data is private!
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text mb-2">Have them navigate to their Steam <a
                            href="https://help.steampowered.com/en/faqs/view/588C-C67D-0251-C276"
                            target="_blank">profile privacy</a> page and make sure it looks like this:</p>
                    <img src="/images/make-profile-public.png" class="figure-img img-fluid rounded modal-img"
                        alt="Make profile public">
                </div>
                {{else}}
                {{> (whichCompareStatDisplay)}}
                {{/if}}
            </div>
        </div>
    </div>
</div>



