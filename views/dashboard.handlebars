<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-5 col-xl-4 p-1">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h4 class="dash-title m-0">Recently Played Games</h4>
                </div>
                <div class="card-body ">
                    {{#each games}}
                    {{>recentGames}}
                    {{/each}}
                            
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-7 col-xl-8 p-1">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h4 class=" dash-title m-0">Game News</h4>
                </div>
                <div class="card-body">
                    {{#each newsPerGame}}
                    <div class="card shadow-lg mb-3">
                         <div class="card-header">
                            <h5 class="card-title card-text m-0">{{name}}</h5>
                        </div>
                        <div class="card-body">
                            {{#each news}}
                            {{>newsPartial}}
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>