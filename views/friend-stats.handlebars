<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-5 col-xl-4 p-0">
            <div class="card shadow-lg p-0 d-flex flex-column stats-user-card m-2">
                <button class="btn yellow-glow-btn position-absolute bottom-0 end-0 m-3" data-friend-id="{{friendData.id}}" type="button" id="compare-stats-button">
                    Compare stats
                </button>
                <div class="d-flex flex-row">
                    <img src="{{friendData.steam_avatar_full}}"
                        class="img-fluid steam-user-image rounded" alt="...">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <p class="card-text yellow-glow-title">{{friendData.steam_username}}</p>
                            <a href="{{friendData.profile_url}}" target="_blank" class="neon-yellow-link">Steam Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- <div class="card shadow-lg p-0 d-flex flex-column mb-2">
                <div class="d-flex flex-row">
                    <img src="{{friendData.steam_avatar_full}}" class="img-fluid steam-user-image rounded" alt="...">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <p class="card-text mb-1"></p>
                            <p class="card-text user">{{friendData.steam_username}}</p>
                        </div>
                    </div>
                </div>
            </div> --}}
            <div class="card shadow-lg mt-3 m-2">
                <div class="card-header pb-0">
                    <h4 class="dash-title m-1 mt-2">Owned Games: </h4>
                </div>
                <div class="card-body">
                    {{#each ownedGames}}
                    {{>ownedGamesS}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-7 col-xl-8 p-1">
            <div class="card shadow-lg" id="stat-results-display-box">
                <div class="card-body">
                    <div class="container-fluid">
                        {{#if hasStats}}
                        <div class="row d-flex flex-row">
                            <h4 class="card-title col-auto text-center m-2 p-0">Results for {{gameStats.name}}: </h4>
                        </div>
                        {{else}}
                        <div class="row d-flex flex-row justify-content-center align-items-center">
                            <h4 class="card-title dash-title col-auto text-center m-0">Click on a game to see stats</h4>
                        </div>
                        {{/if}}
                    </div>
                    {{#if hasStats}}
                    <ul class="list-group col-12 col-xl-10 col-xxl-8 p-1">
                        {{#each gameStats.stats}}
                        <li class="list-group-item user-stat-list-group-item d-flex justify-content-between p-1 pb-2">
                            <p class="m-0">{{name}}</p>
                            <p class="m-0">{{value}}</p>
                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/friends-stats.js"></script>